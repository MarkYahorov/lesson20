        <item name="android:textSize">@dimen/text_size</item>
    </style>
    
    <style name="text_size.all_text_in_profile_activity">
        <item name="android:layout_marginTop">@dimen/margin_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_text</item>
    </style>

    <style name="all_text_in_profile_activity_land_version">
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    
    <style name="text_size.login_text">
